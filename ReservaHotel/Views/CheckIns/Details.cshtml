@model ReservaHotel.Models.CheckIn

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do CheckIn</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Reserva)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Reserva.Id)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Funcionario)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Funcionario.Nome)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataEHora)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataEHora)
    </dd>
</dl>
<form asp-action="Delete" method="post" class="d-inline">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Deletar" class="btn btn-danger ms-2" onclick="return confirm('Tem certeza que deseja deletar este checkIn?');" />
</form>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ms-2">Editar</a>
<a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
