@model ReservaHotel.Models.Quarto

@{
    ViewData["Title"] = "Detalhes do Quarto";
}

<h1>Detalhes do Quarto</h1>
<hr />
<div class="row g-5">
    <div class="col-md-6">
        <div class="mb-3">
            <span class="text-secondary">Número do quarto:</span> @Model.Numero
        </div>
        <div class="mb-3">
            <span class="text-secondary">Capacidade:</span> @Model.Capacidade
        </div>
        <div class="mb-3">
            <span class="text-secondary">Valor da diária:</span> R$ @Model.VelorDiaria
        </div>
        <div class="mb-3">
            <span class="text-secondary">Categoria:</span> @Model.Categoria
        </div>
        <div class="mb-3">
            <span class="text-secondary">Status:</span> @Model.Status
        </div>
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-danger ms-2" onclick="return confirm('Tem certeza que deseja deletar este quarto?');" />
        </form>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ms-2">Editar</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
    </div>

    <div class="col-md-6">
        <h4 class="mb-3">Análise de vendas do quarto</h4>
        <div class="mb-2">
            <span class="text-secondary">Total de reservas:</span> @ViewData["TotalReservas"]
        </div>
        <div class="mb-2">
            <span class="text-secondary">Mês mais reservado:</span>
            @{
                var mes = (int?)ViewData["MesMaisReservado"];
                var nomeMes = mes > 0
                ? System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(
                System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(mes.Value))
                : "Nenhum";
            }
            @nomeMes
        </div>
        <div class="mb-2">
            <span class="text-secondary">Pacote mais combinado:</span> @ViewData["PacoteMaisVendido"]
        </div>
        <div class="mb-2">
            <span class="text-secondary">Receita total gerada:</span> R$ @(ViewData["ReceitaTotal"])
        </div>
        <div class="mb-2">
            <span class="text-secondary">Ocupação média:</span> @(ViewData["MediaOcupacao"]) hóspedes
        </div>
    </div>
</div>