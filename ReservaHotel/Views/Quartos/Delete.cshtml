@model ReservaHotel.Models.Quarto

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Quarto</h1>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Numero)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Numero)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Capacidade)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Capacidade)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.VelorDiaria)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.VelorDiaria)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Categoria)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Categoria)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2 mt-3">
        <input type="submit" value="Deletar" class="btn btn-danger ms-2" onclick="return confirm('Tem certeza que deseja deletar este quarto?');" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
    </div>
</form>