@model ReservaHotel.Models.Funcionario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Funcionário</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label" type="text"></label>
                <input asp-for="Nome" class="form-control" type="text" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label" type="text"></label>
                <input asp-for="CPF" class="form-control" type="text" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <select asp-for="Cargo" class="form-control" asp-items="Html.GetEnumSelectList<ReservaHotel.Models.Funcionario.CargoFuncionario>()"></select>
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Turno" class="control-label"></label>
                <select asp-for="Turno" class="form-control" asp-items="Html.GetEnumSelectList<ReservaHotel.Models.Funcionario.TurnoFuncionario>()"></select>
                <span asp-validation-for="Turno" class="text-danger"></span>
            </div>
            <div class="form-group gap-2 mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
