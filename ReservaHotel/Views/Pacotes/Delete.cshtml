@model ReservaHotel.Models.Pacote

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Pacote</h1>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Nome)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Descricao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Descricao)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ValorAdicional)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ValorAdicional)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2 mt-3">
        <input type="submit" value="Deletar" class="btn btn-danger ms-2" onclick="return confirm('Tem certeza que deseja deletar este pacote?');" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
    </div>
</form>
