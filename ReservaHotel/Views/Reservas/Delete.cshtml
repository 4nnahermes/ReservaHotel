@model ReservaHotel.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Reserva</h1>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Hospede)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Hospede.Nome)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Quarto)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Quarto.Numero)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Pacote)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Pacote.Nome)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataEntrada)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataEntrada)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataSaida)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataSaida)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.QuantidadeDePessoas)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.QuantidadeDePessoas)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Observacoes)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Observacoes)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2 mt-3">
        <input type="submit" value="Deletar" class="btn btn-danger ms-2" onclick="return confirm('Tem certeza que deseja deletar esta reserva?');" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
    </div>
</form>
