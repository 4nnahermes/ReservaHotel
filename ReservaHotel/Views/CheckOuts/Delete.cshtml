@model ReservaHotel.Models.CheckOut

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar CheckOut</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Reserva)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Reserva.Id)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Funcionario)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Funcionario.Nome)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataEHora)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataEHora)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2 mt-3">
        <input type="submit" value="Deletar" class="btn btn-danger ms-2" onclick="return confirm('Tem certeza que deseja deletar este checkOut?');" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
    </div>
</form>
